<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnType1"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:layout_marginTop="92dp"
        android:text="EVENT TYPE 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnType2"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:onClick="@string/onClick2"
        android:text="EVENT TYPE 2"
        app:layout_constraintStart_toStartOf="@+id/btnType1"
        app:layout_constraintTop_toBottomOf="@+id/btnType1" />

    <Button
        android:id="@+id/btnType3"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:text="EVENT TYPE 3"
        app:layout_constraintStart_toStartOf="@+id/btnType2"
        app:layout_constraintTop_toBottomOf="@+id/btnType2" />

    <Button
        android:id="@+id/btnType4"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:text="EVENT TYPE 4"
        app:layout_constraintStart_toStartOf="@+id/btnType3"
        app:layout_constraintTop_toBottomOf="@+id/btnType3" />

    <Button
        android:id="@+id/btnType5"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:onClick="onClickBtnType5"
        android:text="EVENT TYPE 5"
        app:layout_constraintStart_toStartOf="@+id/btnType4"
        app:layout_constraintTop_toBottomOf="@+id/btnType4" />

</androidx.constraintlayout.widget.ConstraintLayout>