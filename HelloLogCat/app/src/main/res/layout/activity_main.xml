<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnError"
        android:layout_width="215dp"
        android:layout_height="67dp"
        android:layout_marginTop="48dp"
        android:text="Show LogCat Error"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnWarning"
        android:layout_width="215dp"
        android:layout_height="67dp"
        android:layout_marginTop="36dp"
        android:text="Show LogCat Warning"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnError" />

    <Button
        android:id="@+id/btnInformation"
        android:layout_width="215dp"
        android:layout_height="67dp"
        android:layout_marginTop="36dp"
        android:text="Show LogCat Information"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWarning" />

    <Button
        android:id="@+id/btnDebug"
        android:layout_width="215dp"
        android:layout_height="67dp"
        android:layout_marginTop="36dp"
        android:text="Show LogCat Debug"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInformation" />

    <Button
        android:id="@+id/btnVerbose"
        android:layout_width="215dp"
        android:layout_height="67dp"
        android:layout_marginTop="36dp"
        android:text="Show LogCat Verbose"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDebug" />
</androidx.constraintlayout.widget.ConstraintLayout>